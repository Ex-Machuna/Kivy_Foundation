<TitleScreen>:

    FloatLayout:

        BoxLayout:

            orientation: 'vertical'
            size_hint: None, None
            size: 200, 150
            pos_hint: {'center_x': .5, 'center_y': .5}

            Button:
                text: 'New Game'
                font_size: 16
                on_release: root.manager.current = 'game'

            Button:
                text: 'Hi-Scores'
                font_size: 16
                on_release: root.manager.current = 'hiscores'

            Button:
                text: 'Settings'
                font_size: 16
                on_release: root.manager.current = 'settings'

<GameScreen>:

    FloatLayout:

        BoxLayout:

            orientation: 'vertical'
            size_hint: None, None
            size: 300, 150
            pos_hint: {'center_x': .5, 'center_y': .5}

            Button:
                text: 'Welcome to New Game'
                size_hint: None, None
                size: 300, 100

            Button:
                text: 'Back'
                size_hint: None, None
                size: 300, 100
                on_release: root.manager.current = 'title'

