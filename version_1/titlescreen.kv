ScreenManager:

    id: screen_manager

    TitleScreen:
        name: 'title'
        manager: screen_manager

    GameScreen:
        name: 'game'
        manager: screen_manager

<TitleScreen>:

    FloatLayout:

        BoxLayout:

            orientation: 'vertical'
            size_hint: None, None
            size:200, 150
            pos_hint: {'center_x': .5, 'center_y': .5}

            Button:
                text: 'New Game'
                font_size: 16
                on_release: root.manager.current = 'game'

            Button:
                text: 'Hi-Scores'
                font_size: 16

            Button:
                text: 'Settings'
                font_size: 16

<GameScreen>:

    FloatLayout:

        Button:
            text: 'Welcome to New Game'
            size_hint: None, None
            size:100, 100
            pos_hint: {'center_x': .5, 'center_y': .5}